<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ACTION -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- TREE VIEW -->
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_mark_accept_button" string="Accept" type="object" icon="fa-check"/>
                <button name="action_mark_refuse_button" string="Refuse" type="object" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status" />
                    </group>

                </sheet>
            </form>


        </field>
    </record>
    <!-- SEARCH VIEW -->
    <!-- <record id="estate_property_offer_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.offer.view.search.filter</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record> -->

</odoo>
