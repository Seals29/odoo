<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ACTION -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>

    </record>

    <!-- TREE VIEW -->
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" 
            decoration-bf="status == 'accepted'"
            decoration-success="status == 'accepted' or property_state =='offer received'" 
            decoration-danger="status == 'refused'"
            
            >
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="property_state" column_invisible="True"/>
                <button name="action_mark_accept_button" type="object" string="Accept" icon="fa-check" invisible="status or property_state in ['offer_accepted', 'sold', 'canceled']"/>
                <button name="action_mark_refuse_button" type="object" string="Refuse" icon="fa-times" invisible="status or property_state in ['offer_accepted', 'sold', 'canceled']"/>
                <field name="status" column_invisible="True"/>
                <field name="property_type_id" column_invisible="1"/>
            </tree>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="price"/>
                        <field name="partner_id" />
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status" />
                    </group>

                </sheet>
            </form>


        </field>
    </record>
    <!-- SEARCH VIEW -->
    <!-- <record id="estate_property_offer_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.offer.view.search.filter</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record> -->

</odoo>
