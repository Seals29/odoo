<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="estate_property_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.search.filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>

                <field name="name"/>
                <field name="property_type_id"/>
                <field name="state" invisible="1"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tag" options="{'color_field':'color'"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <!-- Optional: Custom Filter -->
                <filter string="Has Garden" name="has_garden" domain="[('garden', '=', True)]"/>
                <filter string="Price > 1M" name="price_1m" domain="[('expected_price', '>', 1000000)]"/>
                <filter name="state" string="Available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                <filter name="available" string="Available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
            </search>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ['offer_received', 'offer_accepted']" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">

            <!-- sensitive case -->
                <field name="tag_ids" widget="many2many_tags" class="pb-3"/>                
                <field name="name"/>
                <field name="state"/>

                <field name="property_type_id"/>
                <field name="description"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garden_area"/>
                <field name="postcode" placeholder="78391"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
            <header>
                <!-- Action Button -->
                <button string="Cancel" name="action_mark_cancel_button" type="object" invisible="state in ['sold', 'canceled','offer received']"
                />
                <button string="Sold" name="action_mark_sold_button" type="object" class="oe_highlight" invisible="state in ['sold', 'canceled', 'offer received']" />
                <!-- Status  -->
                <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
            </header>
            
            <sheet>
                <div class="oe_title">
                    <h1> 
                        <field name="name"/> 
                    </h1>
                </div>
                <group >
                    <group>
                        <field name="tag_ids" widget="many2many_tags" class="pb-3"
                            options=
                            "{
                                'color_field': 'color'
                            }"
                        />                
                        <field name="property_type_id"/>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="state" groups="base.group_no_one"/>
                    </group>
                     <group>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="total_area" />
                        <field name="best_price" />
                    
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area" invisible="not garden"/>
                            <field name="garden_orientation" invisible="not garden"/>
                        </group>
                    </page>
                    <page string="Offers">
                        <group>
                            <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'canceled']"/>
                        </group>  
                    </page>
                    <page string="Active">
                        <group>
                            <field name="active" />
                        </group>  
                    </page>
                     <page string="Other Info">
                        <group>
                            <field name="salesman_id" />
                            <field name="buyer_id" />
                        </group>  
                    </page>
                </notebook>

            </sheet>
    </form>

        </field>
    </record>

    <!-- ACTION -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


    <!-- Kanban -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" groups_draggable="False" records_draggable="False"> 
                <field name="state" />
                 <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    Expected Price:
                                        <field name="expected_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer received'">
                                    Best Offer:
                                        <field name="best_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer accepted'" >
                                    Selling Price: <field name="selling_price"/>   
                                </div>
                                <div>
                                            <field name="tag_ids" widget="many2many_tags" class="pb-3"
                                            options=
                                            "{
                                                'color_field': 'color'
                                            }"
                                        />  
                                </div>
                        </div>

                    </t>

                </templates>
            </kanban>
        </field>
    </record>
</odoo>
